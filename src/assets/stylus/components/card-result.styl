.card-result
    @extend .vertical-center-column
    width 100%
    height 100%
    z-index $small-index

    &__picture
        @extend .fully-centered
        margin-top $size-little 
        width $size-medium
        height $size-medium
        border-radius 50px
        background-color $lightlOpacity

        & > img 
            width 100%
            height 100%
            object-fit cover

    &__id
        background $mediumOpacity
        text-align center
        width $size-default
        padding $size-micro $size-none
        margin-top $size-special-small
        border-radius $size-micro
    
    &__title
        font-size $medium-font
        font-weight bold
        padding 16px $size-none
        text-transform capitalize

    &__type
        font-size $small-font
    
    &__detail
        color $normal
        text-align left
        width 100%
        padding $size-nano $size-little
        text-transform capitalize

        &--title
            padding $size-special-small $size-none
            font-size $medium-font
            text-align center