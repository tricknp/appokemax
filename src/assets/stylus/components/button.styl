.appmax-button
    border 1px solid $normal
    transition $transition-time-fast $transition-type-socondary

    &--square
        border-radius $size-nano
    
    &--rounded
        border-radius $size-special-small
    
    &--theme-primary
        background $normal
        color $lightGrey
        &:hover
            background $lightGrey
            color $normal

    &--theme-secondary
        background transparent
        color $normal
        &:hover
            background $normal
            color $lightGrey

    &--size-small
        width $size-default
        padding $size-quark $size-nano
    
    &--size-medium
        width 210px
        padding $size-micro $size-tiny

    &--size-large
        width 250px
        padding $size-tiny
        font-size 1.1rem
    
    &--full-width
        width 100% !important
    
    &--disabled
        pointer-events none
        opacity .7
