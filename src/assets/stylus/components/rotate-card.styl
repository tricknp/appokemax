.card
    perspective 500px
    position relative
    width 210px
    height 290px
    margin $size-tiny $size-none

    &__frontside, &__backside
        @extend .fully-centered 
        border-radius $size-micro
        position absolute
        top  $size-none
        left $size-none
        width 100%
        height 100%
        transition all $transition-time-medium $transition-type-default
        box-shadow $shadow-default-size $highOpacity;
        backface-visibility  hidden

    &__frontside
        transform rotateY(0deg)
        
        &--rotate-front
            transform rotateY(-180deg)
            
    &__backside
        background-color $lightGrey

        &--rotate-back
            transform rotateY(180deg)
